<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ui"
    tools:context=".setting.SignInActivity"
    android:keepScreenOn="true"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:src="@drawable/instagram"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Email ..."
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/inputs_background"
        android:hint="Password ..."
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:inputType="textEmailAddress"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/mr10_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="1dp"
        android:text="Mr10"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp" />
    <Button
        android:id="@+id/mr20_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@id/mr10_btn"
        android:text="Mr20"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/mr30_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@id/mr20_btn"
        android:text="Mr30"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/mr40_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@id/mr30_btn"
        android:text="Mr40"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/mr50_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@id/mr40_btn"
        android:text="Mr50"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/signup_link_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/color_Primary"
        android:text="Need New Acount?  Sign Up..."
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"/>




</RelativeLayout>